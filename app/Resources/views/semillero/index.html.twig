{% extends '::layout.html.twig' %}

{% block contenido %}
    <h1>Semilleros de Investigacion</h1>

    <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
        <a href="{{ path('semillero_new') }}" class="btn btn-primary">Nuevo Semillero</a>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for semillero in semilleros %}
                <tr>
                    <td><a href="{{ path('semillero_show', { 'id': semillero.id }) }}">{{ semillero.id }}</a></td>
                    <td>{{ semillero.nombre }}</td>
                    <td>
                        <a href="{{ path('semillero_edit', { 'id': semillero.id }) }}" class="btn btn-success">Editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
