{% extends '::layout.html.twig' %}

{% block contenido %}
    <h1>Lineas de Investigacion</h1>

    <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
        
        <a href="{{ path('lineainvestigacion_new') }}" class="btn btn-primary">Nueva Linea</a>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for lineaInvestigacion in lineaInvestigacions %}
                <tr>
                    <td><a href="{{ path('lineainvestigacion_show', { 'id': lineaInvestigacion.id }) }}">{{ lineaInvestigacion.id }}</a></td>
                    <td>{{ lineaInvestigacion.nombre }}</td>
                    <td>
                        <a href="{{ path('lineainvestigacion_edit', { 'id': lineaInvestigacion.id }) }}" class="btn btn-success">Editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
          
{% endblock %}
