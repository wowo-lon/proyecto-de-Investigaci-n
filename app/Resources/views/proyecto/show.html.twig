{% extends '::layout.html.twig' %}

{% block contenido %}
    <h1>Detalles del proyecto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proyecto.id }}</td>
            </tr>
            <tr>
                <th>Fechainicio</th>
                <td>{% if proyecto.fechaInicio %}{{ proyecto.fechaInicio|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ proyecto.nombre }}</td>
            </tr>
            <tr>
                <th>Resumen</th>
                <td>{{ proyecto.resumen }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ proyecto.director.nombre }} {{ proyecto.director.apellido }}</td>
            </tr>
            <tr>
                <th>Participantes</th>
                <td>
                    {% for docente in proyecto.participantes %}
                        {{ docente.nombre }} {{ docente.apellido }} <br>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Aportes</th>
                <td>
                    {% for aporte in aportes %}
                        <a href="{{ asset(aporte.getWebPath) }}">{{ aporte.titulo }}</a> <br>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Documento </th>
                <td><a href="{{ asset(proyecto.getWebPath) }}">{{ proyecto.documento }}</a></td>
            </tr>
        </tbody>
    </table>
        {{ form_start(delete_form) }}
            <a href="{{ path('proyecto_edit_index', { 'id': proyecto.id }) }}" class="btn btn-info">Editar</a>
            <a href="{{ path('proyecto_index') }}" class="btn btn-success">ir a Listado</a>
            <input type="submit" value="Eliminar" class="btn btn-danger">
        {{ form_end(delete_form) }}
        
{% endblock %}
