{% extends '::layout.html.twig' %}

{% block contenido %}
    <h1>Nuevo Proyecto</h1>

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <br>
            <input type="submit" value="Crear" class="btn btn-success"/>
            <a href="{{ path('proyecto_index') }}" class="btn btn-danger">Volver</a>
        {{ form_end(form) }}
    </div>

    <script>
    	$(document).ready(function(){
    		var options;
    		{% for usuario in users %}
    		    options = options + '<option value="{{ usuario.id }}">{{ usuario.nombreCompleto }}</option>'; 
    		    console.log({{ usuario.id }});
    		{% endfor %}

    		$("#proyecto_director option").remove();
	        $("#proyecto_director").append(options);
	        
		});
    </script>
{% endblock %}
