{% extends '::layout.html.twig' %}

{% block contenido %}
    <h1>Cambiar documento del proyecto</h1>

    
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
        <p>Documento Actual: <a href="{{ asset(proyecto.getWebPath) }}">{{ proyecto.documento }}</a> </p>

        {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <input type="submit" class="btn btn-success" value="Guardar Cambios">
            
            <a href="{{ path('proyecto_edit_index', { 'id': proyecto.id }) }}" class="btn btn-danger">Volver</a>
        {{ form_end(edit_form) }}
    </div>
{% endblock %}
