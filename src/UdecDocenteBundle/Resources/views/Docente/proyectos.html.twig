{% extends '::layout_docente.html.twig' %}

{% block contenido %}
    <h1>Proyectos</h1>
    
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
        {% for proyecto in proyectos %}
            <div class="panel panel-default">
                <div class="panel-heading">{{ proyecto.id }} - {{ proyecto.nombre }}</div>
                <div class="panel-body">
                    <table>
                        <tbody>
                            <tr>
                                <th>Fecha de inicio</th>
                                <td>{% if proyecto.fechaInicio %}{{ proyecto.fechaInicio|date('Y-m-d') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Resumen</th>
                                <td>{{ proyecto.resumen }}</td>
                            </tr>
                            <tr>
                                <th>Director</th>
                                <td>{{ proyecto.director.nombre }} {{ proyecto.director.apellido }}</td>
                            </tr>
                            <tr>
                                <th>Participantes</th>
                                <td>
                                    <ul>
                                    {% for docente in proyecto.participantes %}
                                        <li>{{ docente.nombre }} {{ docente.apellido }}</li>
                                    {% endfor %}
                                    </ul>
                                </td>
                            </tr>
                            <tr>
                                <th>Documento </th>
                                <td><a href="{{ asset(proyecto.getWebPath) }}">{{ proyecto.documento }}</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        {% endfor %}
        
    </div>
{% endblock %}
